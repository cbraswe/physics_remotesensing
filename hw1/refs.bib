	language = {eng},
	urldate = {2023-09-20},
	author = {Karl, T. R. and Diamond, H. J. and Bojinski, S. and Butler, J. H. and Dolman, H. and Haeberli, W. and Harrison, D. E. and Nyong, A. and Rösner, S. and Seiz, G. and Trenberth, K. and Westermeyer, W. and Zillman, J.},
